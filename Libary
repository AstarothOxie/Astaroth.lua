-- isi Mercury UI original disini (copas semua)

-- lalu di paling bawah kita tambahin wrapper
local AstarothLib = {}

function AstarothLib:Create(options)
    return self:create(options) -- dari Mercury
end

function AstarothLib:CreateTab(window, options)
    local tab = window:tab(options)

    -- wrapper gampang
    function tab:CreateButton(opt)
        return tab:Button({
            Name = opt.Name,
            Description = opt.Description or "",
            Callback = opt.Callback
        })
    end

    function tab:CreateToggle(opt)
        return tab:Toggle({
            Name = opt.Name,
            StartingState = opt.StartingState or false,
            Callback = opt.Callback
        })
    end

    return tab
end

return AstarothLib
